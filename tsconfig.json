{
    "compilerOptions": {
        "allowJs": false,
        "baseUrl": ".",
        "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"]
        },
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "types": ["@nuxt/types", "@types/node", "vuetify"]
    },
    "exclude": [".nuxt", "dist", "node_modules"]
}
