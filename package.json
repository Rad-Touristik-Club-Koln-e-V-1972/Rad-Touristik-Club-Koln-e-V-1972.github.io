{
    "name": "rad-touristik-club-koln-e-v-1972.github.io",
    "version": "1.0.0",
    "private": true,
    "TODO": "TODO WORKAROUND 'bash -c' IS NEEDED IN lint-staged UNTIL https://github.com/johnsoncodehk/volar/issues/1153 IS FIXED AFTER MY COMMENT",
    "TODO0": "TODO WORKAROUND dependency '@yeger/vue2-masonry-wall' is needed until vuetify 3.2.0 delivers native support. See https://github.com/vuetifyjs/vuetify/issues/11177",
    "scripts": {
        "build": "nuxi generate",
        "dev": "nuxi dev",
        "lint": "npm run lint:markup && npm run lint:js && npm run lint:style && npm run lint:prettier",
        "lint:js": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore --fix .",
        "lint:markup": "vue-tsc",
        "lint:prettier": "prettier --write --list-different --ignore-path .gitignore .",
        "lint:style": "stylelint \"**/*.{css,scss,sass,html,vue}\" --ignore-path .gitignore --fix",
        "predev": "npm run lint",
        "prepare": "husky install && nuxi prepare"
    },
    "dependencies": {
        "@pinia/nuxt": "^0.4.2",
        "@yeger/vue2-masonry-wall": "^2.0.56",
        "date-holidays": "^3.16.7",
        "nuxt-edge": "latest",
        "pinia": "^2.0.22",
        "uuid": "^9.0.0",
        "vue": "^2.7.10",
        "vuetify": "^2.6.10"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-conventional": "^17.1.0",
        "@mdi/js": "^7.0.96",
        "@nuxt/bridge": "npm:@nuxt/bridge-edge@^3.0.0-27740081.058a6c1",
        "@nuxt/types": "^2.15.8",
        "@nuxtjs/eslint-config-typescript": "^11.0.0",
        "@nuxtjs/eslint-module": "^3.1.0",
        "@nuxtjs/router": "^1.7.0",
        "@nuxtjs/stylelint-module": "^4.1.0",
        "@nuxtjs/vuetify": "^1.12.3",
        "@rushstack/eslint-patch": "^1.2.0",
        "@types/uuid": "^8.3.4",
        "@vue/eslint-config-prettier": "^7.0.0",
        "@vue/eslint-config-typescript": "^11.0.2",
        "eslint-plugin-nuxt": "^4.0.0",
        "eslint-plugin-vuetify": "^1.1.0",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-recommended-vue": "^1.4.0",
        "stylelint-config-standard": "^28.0.0",
        "typescript": "^4.7.4",
        "vue-tsc": "^0.40.13"
    },
    "gitHooks": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*.vue": "bash -c vue-tsc",
        "*.{js,ts,vue}": "eslint --fix",
        "*.{css,scss,sass,html,vue}": "stylelint --fix",
        "*.**": "prettier --ignore-unknown --write"
    }
}
